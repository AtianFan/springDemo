<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   					   http://www.springframework.org/schema/beans/spring-beans.xsd
	   					   ">

    <bean id="weatherService" class="org.study.spring.remote.WeatherService">
    </bean>

    <!--将本地服务以http方式暴露出去,可以通过http://localhost:8080/springDemo/remoting/weatherService访问-->
    <bean name="/weatherService" class="org.springframework.remoting.httpinvoker.HttpInvokerServiceExporter">
        <property name="serviceInterface" value="org.study.spring.remote.IWeatherService"></property>
        <property name="service" ref="weatherService"></property>
    </bean>

    <!--客户端代理-->
    <bean id="weatherServiceClientProxy"
          class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="http://localhost:8080/springDemo/remoting/weatherService"/>
        <property name="serviceInterface" value="org.study.spring.remote.IWeatherService"/>
    </bean>

    <bean id="client" class="org.study.spring.remote.WeatherServiceClient">
        <property name="weatherService" ref="weatherServiceClientProxy"/>
    </bean>
</beans>